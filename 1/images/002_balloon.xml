<params>
	<object>
		<label>Standard Balloon</label>
		<width>250</width>
		<height>130</height>
		<description>Standard Balloon - with rounded corners and color border. </description>
	</object>
	<page name=" Parameters " w="240" h="110">
		<param type="label" text="Background-Border color:" x="10" y="11" w="100" h="13"/>
		<param type="select" id="balloon_profile" text="yellow_orange" def="yellow_orange" x="110" y="10" w="120" h="13">
			<items>
				<item id="yellow_orange" label="yellow-orange"/>
				<item id="lyellow_yellow" label="lightyellow-yellow"/>
				<item id="lred_red" label="lightred-red"/>
				<item id="pink_dpink" label="pink-crimson"/>
				<item id="lmag_mag" label="lightmagenta-magenta"/>
				<item id="linen_brown" label="linen-brown"/>
				<item id="llawn_lawn" label="lightlawngreen/lawngreen"/>
				<item id="lgreen_green" label="lightgreen-green"/>
				<item id="khaki_olive" label="khaki-olive"/> 
				<item id="lcyan_turq" label="lightcyan-turquoise"/>
				<item id="lblue_blue" label="lightblue-blue"/>
				<item id="dblue_blue" label="cyan-blue"/>
				<item id="lviolet_violet" label="lightviolet-violet"/>
				<item id="lgrey_grey" label="lightgrey-grey"/>
				<item id="white_grey" label="white-grey"/>
			</items>
		</param>
		<param type="label" text="Arrow:" x="10" y="27" w="100" h="13"/>
		<param type="select" id="arrow" text="bl" def="bl" x="110" y="25" w="120" h="13">
			<items>
				<item id="no" label="No arrow"/>
				<item id="tl" label="top-left"/>
				<item id="tc" label="top-center"/>
				<item id="tr" label="top-right"/>
				<item id="rt" label="right-top"/>
				<item id="rm" label="right-middle"/>
				<item id="rb" label="right-bottom"/>
				<item id="br" label="bottom-right"/>
				<item id="bc" label="bottom-center"/>
				<item id="bl" label="bottom-left"/>
				<item id="lb" label="left-bottom"/>
				<item id="lm" label="left-middle"/>
				<item id="lt" label="left-top"/>
			</items>
		</param>
		<param type="line" x="9" y="48" w="220" h="1"/>
		<param type="label" text="Balloon text:" x="10" y="53" w="100" h="13"/>
		<param type="textedit" id="balloon_text" text="Balloon text goes here" def="Balloon text goes here" x="10" y="66" w="202" h="13" />
		<param type="label" text="Balloon inner margin:" x="10" y="84" w="100" h="13"/>
		<param type="edit" id="balloon_margin" text="5" def="5" x="110" y="83" w="18" h="13" />
		<param type="label" text="pixels" x="130" y="84" w="60" h="13"/>
	</page>
</params>
