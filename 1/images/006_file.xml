<params>
	<object>
		<label>External File</label>
		<width>350</width>
		<height>40</height>
		<description>External file to open in new window</description>
	</object>
	<page name="Parameters" w="200" h="66">
		<param type="label" text="File:" x="10" y="10" w="100" h="13"/>
		<param type="file" id="file_uri" text="" def="" x="110" y="9" w="80" h="13"/>
		<param type="label" text="Caption:" x="10" y="26" w="100" h="13"/>
		<param type="textedit" id="file_text" text="" def="Caption" x="110" y="25" w="80" h="13"/>
		<param type="label" text="Caption location:" x="10" y="42" w="100" h="13"/>
		<param type="select" id="file_controls" text="" def="right" x="110" y="41" w="96" h="13">
			<items>
				<item id="right" label="Right"/>
				<item id="left" label="Left"/>
				<item id="bottom" label="Bottom"/>
			</items>
		</param>
		<param type="check" id="pic_link" def="yes" text="Open file on click on the icon" x="10" y="58" w="180" h="13"/>
		<param type="check" id="file_link" def="no" text="Open file on click on the caption" x="10" y="70" w="180" h="13">
			<events>
				<event name="check" target="file_underline" action="enable"/>
				<event name="uncheck" target="file_underline" action="disable"/>
			</events>
		</param>
		<param type="check" id="file_underline" def="yes" text="Underline caption" x="10" y="82" w="180" h="13"/>
	</page>
</params>
