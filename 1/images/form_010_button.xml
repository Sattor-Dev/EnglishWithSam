<params>
	<object>
		<label>Button</label>
		<width>200</width>
		<height>25</height>
		<description>Configurable Button</description>
	</object>
    <page name=" Parameters " w="220" h="180">
		<param type="label" text="Button text:" x="10" y="10" w="80" h="13"/>
		<param type="edit" id="input_text" text="Click me" def="Click me" x="90" y="9" w="110" h="13"/>
    </page>
	<page name=" Display " w="220" h="180">
		<param type="label" text="Border style:" x="10" y="10" w="110" h="13"/>
		<param type="select" id="input_border_style" text="solid" def="solid" x="120" y="9" w="80" h="13">
			<items>
				<item id="none" label="No border"/>
				<item id="solid" label="Solid"/>
				<item id="double" label="Double"/>
				<item id="inset" label="Outset"/>
				<item id="outset" label="Inset"/>
				<item id="dashed" label="Dashed"/>
				<item id="dotted" label="Dotted"/>
			</items>
		</param>
		<param type="label" text="Border width:" x="10" y="26" w="110" h="13"/>
		<param type="edit" id="input_border_width" text="2" def="2" x="120" y="25" w="18" h="13"/>
		<param type="label" text="pixels" x="142" y="26" w="50" h="13"/>
		<param type="label" text="Border color:" x="10" y="42" w="110" h="13"/>
		<param type="color" id="input_border_color" text="#666666" def="#666666" x="120" y="41" w="45" h="13"/>
		<param type="label" text="Background color:" x="10" y="58" w="110" h="13"/>
		<param type="color" id="input_bg_color" text="#F0F0F0" def="#F0F0F0" x="120" y="57" w="45" h="13"/>
		<param type="label" text="Font:" x="10" y="74" w="110" h="13"/>
		<param type="select" id="input_font" text="Arial" def="Arial" x="120" y="73" w="80" h="13">
			<items>
				<item id="Arial" label="Arial"/>
				<item id="Tahoma" label="Tahoma"/>
				<item id="Times" label="Times"/>
				<item id="Verdana" label="Verdana"/>
				<item id="Courier" label="Courier"/>
			</items>
		</param>
		<param type="label" text="Font size:" x="10" y="90" w="110" h="13"/>
		<param type="edit" id="input_font_size" text="12" def="12" x="120" y="89" w="18" h="13"/>
		<param type="label" text="pixels" x="142" y="90" w="50" h="13"/>
		<param type="label" text="Font weight:" x="10" y="106" w="110" h="13"/>
		<param type="select" id="input_font_weight" text="normal" def="normal" x="120" y="105" w="80" h="13">
			<items>
				<item id="normal" label="Normal"/>
				<item id="bold" label="Bold"/>
			</items>
		</param>
		<param type="label" text="Font style:" x="10" y="122" w="110" h="13"/>
		<param type="select" id="input_font_style" text="normal" def="normal" x="120" y="121" w="80" h="13">
			<items>
				<item id="normal" label="Normal"/>
				<item id="italic" label="Italic"/>
			</items>
		</param>
		<param type="label" text="Font color:" x="10" y="138" w="110" h="13"/>
		<param type="color" id="input_font_color" text="#000000" def="#000000" x="120" y="137" w="45" h="13"/>
		<param type="label" text="Text align:" x="10" y="154" w="110" h="13"/>
		<param type="select" id="input_text_align" text="center" def="center" x="120" y="153" w="80" h="13">
			<items>
				<item id="center" label="Center"/>
				<item id="left" label="Left"/>
				<item id="right" label="Right"/>
			</items>
		</param>
	</page>
</params>
